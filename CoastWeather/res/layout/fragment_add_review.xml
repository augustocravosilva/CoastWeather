<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select your beach:" />

    <Spinner
        android:id="@+id/beaches_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How are you feeling?" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/imagebuttonM2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/feeling_m2"
            android:contentDescription="-2" />

        <ImageButton
            android:id="@+id/imagebuttonM1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/feeling_m1"
            android:contentDescription="-1" />

        <ImageButton
            android:id="@+id/imagebutton0"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/feeling_0"
            android:contentDescription="0" />

        <ImageButton
            android:id="@+id/imagebutton1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/feeling_1"
            android:contentDescription="1" />

        <ImageButton
            android:id="@+id/imagebutton2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/feeling_2"
            android:contentDescription="2" />
    </LinearLayout>

    <TextView
        android:id="@+id/feelingtext"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/radio_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/radio_feelings"
            android:height="100dp"
            android:width="100dp" />

        <RadioButton
            android:id="@+id/radio_state1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfect" />

        <RadioButton
            android:id="@+id/radio_state2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Just fine" />

        <RadioButton
            android:id="@+id/radio_state3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not bad" />

        <RadioButton
            android:id="@+id/radio_state4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Getting cold" />

        <RadioButton
            android:id="@+id/radio_state5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Awful" />

        <RadioButton
            android:id="@+id/radio_state6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Going home" />
    </RadioGroup>

    <Button
        android:id="@+id/button_publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publish" />

</LinearLayout>