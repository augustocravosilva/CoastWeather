<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/beach"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#003366" />

    <TextView
        android:id="@+id/description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon_feeling"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:contentDescription="@string/activity_beach_feeling" />

        <ImageView
            android:id="@+id/icon_weather1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:contentDescription="@string/activity_beach_weather" />

        <ImageView
            android:id="@+id/icon_weather2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:contentDescription="@string/activity_beach_weather" />

        <ImageView
            android:id="@+id/icon_flag"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:contentDescription="@string/activity_beach_flag" />
    </LinearLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="12sp" />

</LinearLayout>