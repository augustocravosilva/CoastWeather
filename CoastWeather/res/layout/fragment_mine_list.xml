<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/beach"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon_feeling"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_height="30dp" />

        <ImageView
            android:id="@+id/icon_weather1"
            android:layout_toRightOf="@+id/icon_feeling"
            android:layout_width="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_height="30dp" />

        <ImageView
            android:id="@+id/icon_weather2"
            android:layout_toRightOf="@+id/icon_weather1"
            android:layout_width="wrap_content"
            android:layout_alignWithParentIfMissing="true" 
            android:layout_height="30dp" />

        <ImageView
            android:id="@+id/icon_flag"
            android:layout_toRightOf="@+id/icon_weather2"
            android:layout_width="wrap_content"
            android:layout_alignWithParentIfMissing="true" 
            android:layout_height="30dp" />
        
        <Button
	    android:id="@+id/del_button"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:layout_height="wrap_content"
        android:text="@string/action_delete"
	    />
    </RelativeLayout>


    
    <TextView
        android:id="@+id/time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>